<div id="<%= dom_id film %>">
  <p>
    <h1><%= film.title %></h1>
  </p>

  <p>
    <strong>Episode:</strong>
    <%= film.episode_id %>
  </p>

  <p>
    <strong>Release date:</strong>
    <%= film.release_date %>
  </p>

  <p>
    <strong>Director:</strong>
    <%= film.director %>
  </p>

  <p>
    <strong>Producer:</strong>
    <%= film.producer %>
  </p>

  <p>
    <strong>Opening crawl:</strong>
    <%= film.opening_crawl %>
  </p>

  <p>
    <strong>Characters:</strong>
    <%= film.person %>
  </p>

</div>
